<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.firebase.devday.ListActivity">

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/topic_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clipToPadding="false"
		android:paddingBottom="@dimen/cardview_margin_4"
		android:paddingEnd="@dimen/cardview_margin_8"
		android:paddingStart="@dimen/cardview_margin_8"
		android:paddingTop="@dimen/cardview_margin_4"
		android:scrollbarStyle="outsideInset"
		android:scrollbars="vertical"
		tools:listitem="@layout/item_topic"/>

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentBottom="true"
		android:layout_margin="@dimen/activity_margin"
		app:srcCompat="@drawable/ic_check"/>

</RelativeLayout>